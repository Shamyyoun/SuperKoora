<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/autocom_teams_item_padding">

    <FrameLayout
        android:layout_width="@dimen/autocom_teams_item_image_size"
        android:layout_height="@dimen/autocom_teams_item_image_size">

        <ImageView
            android:id="@+id/image_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/default_team_flag" />

        <ImageView
            android:id="@+id/image_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <views.OpenSansSemiBoldTextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/autocom_teams_item_text_margin"
        android:layout_weight="1"
        android:text="Italy"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/autocom_teams_item_text_size" />
</LinearLayout>