<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_topSeperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/matches_page_seperator_height"
        android:background="#a81d45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_teamLogo1"
                android:layout_width="@dimen/matches_page_team_logo_size"
                android:layout_height="@dimen/matches_page_team_logo_size"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/debug_barca" />

            <views.OpenSansTextView
                android:id="@+id/text_teamTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FC Barcelona"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/matches_page_team_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_leagueLogo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/matches_page_league_logo_height"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/debug_liga" />

            <views.OpenSansTextView
                android:id="@+id/text_matchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22-10-2015 22:00"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/matches_page_league_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_teamLogo2"
                android:layout_width="@dimen/matches_page_team_logo_size"
                android:layout_height="@dimen/matches_page_team_logo_size"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/debug_real_madrid" />

            <views.OpenSansTextView
                android:id="@+id/text_teamTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Madrid"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/matches_page_team_title_text_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_bottomSeperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/matches_page_seperator_height"
        android:background="#a81d45" />
</LinearLayout>