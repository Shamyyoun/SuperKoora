<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transfers_cell_bg1"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <views.LatoLightTextView
        android:id="@+id/text_playerName"
        style="@style/TransfersColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="C.Ronaldo"
        android:textColor="@color/primary"
        android:textSize="@dimen/transfers_details_text_size" />

    <View
        android:layout_width="@dimen/transfers_column_seperator_width"
        android:layout_height="match_parent"
        android:background="@color/transfers_cell_seperator" />

    <FrameLayout
        style="@style/TransfersColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/image_nationality"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/debug_england" />
    </FrameLayout>

    <View
        android:layout_width="@dimen/transfers_column_seperator_width"
        android:layout_height="match_parent"
        android:background="@color/transfers_cell_seperator" />

    <LinearLayout
        style="@style/TransfersColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/image_fromClub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transfers_club_image_height"
            android:scaleType="fitCenter"
            android:src="@drawable/debug_real_madrid" />

        <views.LatoLightTextView
            android:gravity="center"
            android:id="@+id/text_fromClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real M."
            android:textColor="@color/primary"
            android:textSize="@dimen/transfers_club_title_text_size" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/transfers_column_seperator_width"
        android:layout_height="match_parent"
        android:background="@color/transfers_cell_seperator" />

    <LinearLayout
        style="@style/TransfersColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/image_toClub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transfers_club_image_height"
            android:scaleType="fitCenter"
            android:src="@drawable/debug_ajax" />

        <views.LatoLightTextView
            android:gravity="center"
            android:id="@+id/text_toClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajax"
            android:textColor="@color/primary"
            android:textSize="@dimen/transfers_club_title_text_size" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/transfers_column_seperator_width"
        android:layout_height="match_parent"
        android:background="@color/transfers_cell_seperator" />

    <views.LatoLightTextView
        android:id="@+id/text_fees"
        style="@style/TransfersColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="200m"
        android:textColor="@color/primary"
        android:textSize="@dimen/transfers_details_text_size" />
</LinearLayout>